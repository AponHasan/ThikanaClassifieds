<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .col-sm-2, .col-sm-12 {
            margin: 0px 0px 0px 0px;
            padding: 0px 0px 0px 0px;
        }

        .classifiedadminleftpanel ul li a {
            font-size: 15px;
            font-weight: bold;
        }

        .classifiedadminleftpanel {
            padding-top: 20px;
        }

            .classifiedadminleftpanel ul li {
                list-style-type: none;
                margin: 0;
                padding-top: 5px;
                padding-bottom: 5px;
            }
    </style>
</head>
<body>
    <div class="ClassifiedHead" style="width: 100%; height: 30px; background-color: #e8e8e8; text-align:right">
        <a href="">Logout</a>
    </div>
    <div class="col-sm-12">
        <div class="col-sm-2">
            <div class="classifiedadminleftpanel" style="background-color: #e8e8e8; height:625px;">
                <ul>
                    <li><a href="/Admin/ClassifiedsItemData">Home Page</a></li>
                    <li><a href="/Admin/ClassifiedCategory">Create Category</a></li>
                    <li><a href="/Admin/ClassifiedsCategoryData">Category List</a></li>
                    <li><a href="/Admin/ClassifiedItem">Add Items</a></li>
                    <li><a target="_blank" href="http://thikana.us/admin/login"> Thikana Admin</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-10">
            @RenderBody()
        </div>
        <hr />
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>