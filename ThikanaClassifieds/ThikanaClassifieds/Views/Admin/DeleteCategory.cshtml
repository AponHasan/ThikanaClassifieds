@model ThikanaClassifieds.Models.Classifieds_Category
@{
    ViewBag.Title = "DeleteCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Category Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Classifieds_Category_Name)
        </dd>

        <dt>
        Category Image
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Classifieds_Category_Image)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ClassifiedsCategoryData")
        </div>
    }
</div>