@model ThikanaClassifieds.Models.Classifieds_Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <h2>EditLanguageInfo</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>LanguageInfo</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Classifieds_Category_Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Classifieds_Category_Name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Classifieds_Category_Name)                        
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Classifieds_Category_Image, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Classifieds_Category_Image)*@
                        @Html.TextBoxFor(model => model.Classifieds_Category_Image, new { type = "file" })
                        
                    </div>
                </div>               

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "ClassifiedsCategoryData")
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>